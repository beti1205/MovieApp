<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@+id/moviesGraph">

    <include app:graph="@navigation/movies_graph" />
    <include app:graph="@navigation/tv_graph" />

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.beti1205.movieapp.ui.movies.details.MovieDetailsFragment"
        android:label="@string/movie_details_label">

        <argument
            android:name="selectedMovieId"
            app:argType="integer" />

        <action
            android:id="@+id/action_movieDetailsFragment_to_personDetailsFragment"
            app:destination="@id/personDetailsFragment">

            <argument
                android:name="selectedPersonId"
                app:argType="integer" />

        </action>
        <action
            android:id="@+id/action_movieDetailsFragment_to_movieReviewsFragment"
            app:destination="@id/movieReviewsFragment">

            <argument
                android:name="movieId"
                app:argType="integer" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/TVSeriesDetailsFragment"
        android:name="com.beti1205.movieapp.ui.tvseries.details.TVSeriesDetailsFragment"
        android:label="@string/tv_details_label">

        <argument
            android:name="selectedTVSeriesId"
            app:argType="integer" />
        <action
            android:id="@+id/action_TVSeriesDetailsFragment_to_personDetailsFragment"
            app:destination="@id/personDetailsFragment">

            <argument
                android:name="selectedPersonId"
                app:argType="integer" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/personDetailsFragment"
        android:name="com.beti1205.movieapp.ui.persondetails.PersonDetailsFragment"
        android:label="@string/person_details_label">

        <argument
            android:name="selectedPersonId"
            app:argType="integer" />

        <action
            android:id="@+id/action_personDetailsFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment">

            <argument
                android:name="selectedMovieId"
                app:argType="integer" />

        </action>

        <action
            android:id="@+id/action_personDetailsFragment_to_TVSeriesDetailsFragment"
            app:destination="@id/TVSeriesDetailsFragment">

            <argument
                android:name="selectedTVSeriesId"
                app:argType="integer" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/movieReviewsFragment"
        android:name="com.beti1205.movieapp.ui.movies.reviews.MovieReviewsFragment"
        android:label="@string/movie_review_label">

        <argument
            android:name="movieId"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.beti1205.movieapp.ui.account.AccountFragment"
        android:label="@string/account_label">

        <argument
            android:name="authenticationSuccess"
            android:defaultValue="false"
            app:argType="boolean"/>

        <deepLink
            android:id="@+id/deepLink"
            app:uri="movieapp://app/authenticate?authenticationSuccess={authenticationSuccess}">

        </deepLink>
    </fragment>

</navigation>